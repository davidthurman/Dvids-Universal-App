<Page
    x:Class="DvidsUniversalXboxOneApp.LivePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DvidsUniversalXboxOneApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Frame x:ConnectionId='1' x:Name="liveFrame">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Background="#404040">
                <!-- List of Live Shows -->
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <StackPanel>
                        <Grid>
                            <GridView x:ConnectionId='2' x:Name="liveGrid" ItemsSource="{Binding LiveXamlDataCollections}">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Button x:ConnectionId='3'                      Tag="{Binding ButtonTag}">
                                            <StackPanel>
                                                <Grid Height="125" Width="200" BorderThickness="3">
                                                    <Grid.Background>
                                                        <ImageBrush ImageSource="{Binding LiveThumbnails}"/>
                                                    </Grid.Background>
                                                    <Border VerticalAlignment="Bottom">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="White" Opacity=".12"/>
                                                        </Border.Background>
                                                        <TextBlock Text="{Binding LiveDateStart}" Foreground="White" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                                
                                            </StackPanel>
                                            
                                        </Button>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Frame>
</Page>

